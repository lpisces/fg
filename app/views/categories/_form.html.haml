= simple_form_for(@category, :html => {:class => 'form-horizontal'}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :label => '中文名'
    = f.input :ename, :label => '英文名'
    = f.input :sort, :label => '排序'

  .form-actions
    = f.button :submit, :value => '保存', :class => 'btn btn-success'
