.navbar
  .navbar-inner
    %a.brand{:href => "/"}= Settings.App.name
    - if admin?
      %ul.nav
        - Settings.Nav.items.each do |i|
          - if i.ename.include? self.controller_name.to_s
            %li.active
              %a{:href => i.link}= i.cname
          - else
            %li
              %a{:href => i.link}= i.cname

    - if signed_in?
      .btn-group.pull-right
        %button.btn.btn-mini.dropdown-toggle{"data-toggle" => "dropdown", :style => 'margin-top:5px;'}
          = current_user.email
          %span.caret
        %ul.dropdown-menu
          %li
            %a{:href => "#"} 
          %li.divider
          %li
            %a{:href => "/logout"} 登出
