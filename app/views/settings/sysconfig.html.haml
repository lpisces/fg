.block.span19.pull-left{:style => 'height:200px;margin-left:45px;'}
  - if flash[:notice]
    .alert.alert-success.alert-block{:style => ''}
      %button.close{"data-dismiss" => "alert", :type => "button"} &times;
      = flash[:notice]

  .navbar{:style => 'margin:0px;'}
    .navbar-inner{:style => 'line-height:30px;'}
      系统信息

  .clearfix.span20{:style => 'height:40px;'}

  .b{:style => 'padding-top:10px;margin:0px -1px;height:400px;border-top:none;border:1px solid #eee;'}


    = form_tag('/settings/sysconfig_save', {:class => 'form-horizontal'}) do
      .control-group
        %label.control-label{:for => "title", :style => 'width:80px;'} 网站标题
        .controls{:style => 'margin-left:100px;'}
          %input#title{:type => "text", :name => 'title', :value => @title.value}
  
      .control-group
        %label.control-label{:for => "keywords", :style => 'width:80px;'} 网站关键字
        .controls{:style => 'margin-left:100px;'}
          %input.input-xxlarge#keywords{:type => "text", :name => 'keywords', :value => @keywords.value}
  
      .control-group
        %label.control-label{:for => "description", :style => 'width:80px;'} 网站描述
        .controls{:style => 'margin-left:100px;'}
          %textarea#description{:type => "text", :name => 'description'}= @description.value
  
      .control-group
        .controls{:style => 'margin-left:100px;'}
          %button.btn.btn-mini.btn-success{:type => "submit"} 保存
